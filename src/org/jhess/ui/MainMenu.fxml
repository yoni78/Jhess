<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane minHeight="300.0" minWidth="200.0" prefHeight="300.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jhess.ui.MainMenu">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="6.0" prefHeight="300.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Jhess">
               <font>
                  <Font size="48.0" />
               </font></Text>
                <Button minHeight="40.0" minWidth="120.0" mnemonicParsing="false" onAction="#btnTwoPlayerGame" text="Two-Player Game">
                    <VBox.margin>
                        <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                    </VBox.margin>
                </Button>

                <Button minHeight="40.0" minWidth="120.0" mnemonicParsing="false" onAction="#btnPositionAnalyser" text="Position Analyser">
                    <VBox.margin>
                        <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                    </VBox.margin>
                </Button>

                <Button fx:id="btnExit" minHeight="40.0" minWidth="120.0" mnemonicParsing="false" onAction="#btnExitClicked" text="Exit">
                    <VBox.margin>
                        <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                    </VBox.margin>
                </Button>
                
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
